@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="moviecontroller">
 <div class="movies">  
    <h1>{{movieHeader}}</h1>


    <p class="addMovie">
        <a ng-href="~/Movies/Create/">Add Movie</a>
    </p>

    <table class="table table-hover " border="1">
        <tr>
            <th>Title</th>
            <th> Release Date</th>
            <th>Genre</th>
            <th>Price</th>
            <th> Rating </th>
            <th> CRUD</th>
        </tr>


        <tr ng-repeat="item in movieList">
            <td>
                {{ item.Title }}
            </td>
            <td>
                {{ item.ReleaseDate }}
            </td>
            <td>
                {{ item.Genre }}
            </td>
            <td>
                {{ item.Price }}
            </td>
            <td>
                {{ item.Rating }}
            </td>
            <td>
                <a ng-href="~/Movies/Edit/{{item.ID}}">Edit</a>
                <a ng-href="~/Movies/Details/{{item.ID}}">Details</a>
                <a ng-href="~/Movies/Delete/{{item.ID}}">Delete</a>
            </td>
        </tr>
    </table>
    </div>
</div>
